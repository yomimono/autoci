opam-version: "1.2"
authors:      ["Dave Scott" "Anil Madhavapeddy"]
maintainer:   "dave@recoil.org"
homepage:     "https://github.com/mirage/ocaml-fat"
bug-reports:  "https://github.com/mirage/ocaml-fat/issues"
dev-repo:     "https://github.com/mirage/ocaml-fat.git"
doc:          "https://mirage.github.io/ocaml-fat/"

build: [
  ["dune" "subst"] {pinned}
  ["dune" "build" "-p" name "-j" jobs]
]
depends: [
  "dune" {build & >= "1.0"}
  "cstruct" {>= "3.0.0"}
  "ppx_tools" {build}
  "ppx_cstruct" {build}
  "result"
  "rresult"
  "lwt" {>= "2.4.3"}
  "mirage-fs" {>= "1.0.0"}
  "mirage-fs-lwt" {>= "1.0.0"}
  "mirage-block-lwt" {>= "1.0.0"}
  "mirage-block-unix" {>= "2.5.0"}
  "io-page-unix" {>= "2.0.0"}
  "re"
  "cmdliner"
  "astring"
  "alcotest" {test}
]
tags: [
  "org:mirage"
  "org:xapi-project"
]
available: [ ocaml-version >= "4.03.0" ]
